#!/usr/bin/groovy

pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    stages {

        stage("Build") {
            steps { buildApp() }
		}

        stage("Deploy - Dev") {
            steps { deploy('dev') }
		}

	}
}


// steps
def buildApp() {
	dir ('section_4/code/cd_pipeline' ) {
		def appImage = docker.build("hands-on-jenkins/myapp:${BUILD_NUMBER}")
	}
}

def deploy(environment) {

	def containerName = ''
	def port = ''

	if ("${environment}" == 'dev') {
		containerName = "app_dev"
		port = "8888"
	} 
	else {
		println "Environment not valid"
		System.exit(0)
	}

	// Verificar si Docker est√° funcionando
	bat 'docker version || exit /b 255'

	// Mostrar contenedores antes de intentar eliminarlos
	bat 'docker ps -a'

	// Intentar detener el contenedor (y capturar errores)
	bat '''
	for /f %%i in ('docker ps -f name=${containerName} -q') do (
		echo Stopping container %%i
		docker stop %%i || echo Failed to stop container %%i
	)
	'''

	// Intentar eliminar el contenedor
	bat '''
	for /f %%i in ('docker ps -a -f name=${containerName} -q') do (
		echo Removing container %%i
		docker rm %%i || echo Failed to remove container %%i
	)
	'''

	// Iniciar nuevo contenedor
	bat "docker run -d -p ${port}:5000 --name ${containerName} hands-on-jenkins/myapp:${BUILD_NUMBER}"
}



